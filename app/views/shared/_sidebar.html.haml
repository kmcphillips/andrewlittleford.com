%ul
  %li= render :partial => 'shared/admin_nav' if controller.current_user

  - if Event.current.any?
    %li
      %h2 Happening Right Now
      %ul
        - Event.current.each_with_index do |event, index|
          %li{:class => (index == 0 ? "first" : nil)}= link_to event.title, event_path(event)

  - if Event.upcoming.any?
    %li
      %h2 Upcoming Events
      %ul
        - Event.upcoming.each_with_index do |event, index|
          %li{:class => (index == 0 ? "first" : nil)}= link_to event.title, event_path(event)

  - if Link.projects.any?
    %li
      %h2 Current Projects
      %ul
        - Link.projects.each_with_index do |link, index|
          %li{:class => (index == 0 ? "first" : nil)}= link_to link.display, link.url

  %li
    %h2 Credits
    %ul
      %li.credits
        = link_to image_tag("/images/icons/rss.png", :alt => "RSS", :class => "no_border"), "/rss.xml"
        &nbsp;
        = link_to "RSS", "/rss.xml"
        %br
          
        %span
          &copy; #{Time.now.year}
          #{obfuscated_mail_to(SITE_EMAIL, "Andrew Littleford")}
          %br
          #{obfuscated_mail_to(ADMIN_EMAIL, "Kevin McPhillips")}
          %br
          #{obfuscated_mail_to(ADMIN_EMAIL, "Grace Hrabi McPhillips")}
          %br
          = link_to "Site source", "http://github.com/kimos/andrewlittleford.com"

