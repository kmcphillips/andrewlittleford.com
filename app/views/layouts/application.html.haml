!!!
%html
  %head
    %title= page_title

    = auto_discovery_link_tag(:rss, '/rss.xml')

    = stylesheet_link_tag ["fonts", "stylesheet", "prettyPhoto"] + (admin? ? ['jquery-ui-1.8.7.custom'] : [])

    = javascript_include_tag 'jquery/jquery-1.4.2.min'
    = javascript_include_tag ['application', 'rails', 'jquery.prettyPhoto'] + (admin? ? ['jquery-ui-1.8.7.custom.min', 'admin', 'jquery.timepicker'] : [])

    = yield :js

    %link{:rel => "shortcut icon", :type => "image/x-icon", :href => "/favicon.ico"}

    = csrf_meta_tag
    %meta{:name => "keywords", :content => META[:keywords] || ""}
    %meta{:name => "description", :content => META[:description] || ""}

    = render :partial => "shared/analytics"

  %body
    #wrapper
      #header
        #logo
          %h1
            %a{:href => "/"} Andrew Littleford
          %p Performer.&nbsp;Teacher.&nbsp;Musician.

        - if Track.count > 0
          #launch
            = button_to_function "Listen", "window.open('#{track_path(Track.beginning)}','#{Track.window_name}', config='height=400, width=650, toolbar=no, menubar=no, scrollbars=no, resizable=no, location=no, directories=no, status=no'); return false;"


      #menu= render :partial => "shared/nav"

      #page
        #page-bgtop
          #page-bgbtm
            #content
              = render :partial => "shared/flashes"
              = yield
            #sidebar= render :partial => 'shared/sidebar'

    #footer= render :partial => "shared/footer"
