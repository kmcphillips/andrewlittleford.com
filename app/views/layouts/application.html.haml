!!!
%html
  %head
    %title= page_title

    = auto_discovery_link_tag(:rss, '/rss.xml')

    = stylesheet_link_tag ["stylesheet", "prettyPhoto"] + (admin? ? ['jquery-ui-1.8.7.custom'] : [])

    = javascript_include_tag 'jquery/jquery-1.4.2.min'
    = javascript_include_tag ['application', 'rails', 'jquery.prettyPhoto'] + (admin? ? ['jquery-ui-1.8.7.custom.min', 'admin', 'jquery.timepicker'] : [])

    = yield :js

    %link{:rel => "shortcut icon", :type => "image/x-icon", :href => "/favicon.ico"}

    = csrf_meta_tag
    %meta{:name => "keywords", :content => META[:keywords] || ""}
    %meta{:name => "description", :content => META[:description] || ""}

    = render :partial => "shared/analytics"

  %body
    #wrap
      #header
        #full-box= link_to image_tag("template/header.png", :alt => "#{PAGE_TITLE} - #{PAGE_SUB_TITLE}"), "/"

      #menu= render :partial => "shared/nav"

      #content-wrap
        #content
          #sidebar= render :partial => "shared/sidebar"

          #main
            = render :partial => "shared/flashes"
            = yield

      #footer= render :partial => "shared/footer"

