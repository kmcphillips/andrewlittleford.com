!!!
%html
  %head
    %title= page_title

    = auto_discovery_link_tag(:rss, '/rss.xml')

    = stylesheet_link_tag ["fonts", "stylesheet", "jquery.fancybox-1.3.4"] + (admin? ? ['jquery-ui-1.8.7.custom'] : [])

    = javascript_include_tag 'jquery/jquery-1.4.2.min'
    = javascript_include_tag ['application', 'rails', 'jquery.fancybox-1.3.4.pack.js', 'jquery.easing-1.3.pack.js'] + (admin? ? ['jquery-ui-1.8.7.custom.min', 'admin'] : [])

    = yield :js

    %link{:rel => "shortcut icon", :type => "image/x-icon", :href => "/favicon.ico"}

    = csrf_meta_tag
    %meta{:name => "keywords", :content => META[:keywords] || ""}
    %meta{:name => "description", :content => META[:description] || ""}

    = render :partial => "shared/analytics"

  %body
    #background
    #wrapper
      #header
        <!-- Yes it's a table, but it works better than anything I could do in CSS for side by side alignment to a bottom line -->
        %table
          %tr
            %td
              %h1= link_to "Andrew Littleford", "/"
            %td.bottom
              %h2 Performer.&nbsp;Teacher.&nbsp;Musician.
        .clear
          
      #menu= render :partial => "shared/nav"

      #page
        #page-bgtop
          #page-bgbtm
            #content
              = render :partial => "shared/flashes"
              = yield
            #sidebar= render :partial => 'shared/sidebar'

      .clear
    -#footer= render :partial => "shared/footer"
