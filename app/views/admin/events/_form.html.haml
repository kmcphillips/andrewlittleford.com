- content_for :js do
  :javascript
    $(document).ready(function(){
      convert_datetime_select("#starts_at_container");
      convert_datetime_select("#ends_at_container");

      toggle_ends_at();

    });

    function toggle_ends_at()
    {
      if($("#ends_at_present:checked").val() != undefined)
      {
        $("#ends_at_rollup").show();
        $("#ends_at_rollup").parent().find("input[type=text]").show();
      }
      else
      {
        $("#ends_at_rollup").hide();
        $("#ends_at_rollup").parent().find("input[type=text]").hide();
      }
    }

= form_for [:admin, @event] do |f|
  = error_messages(@event)
  
  .field
    = f.label :title
    = f.text_field :title, :size => 50
  .field
    = f.label :description
    = f.text_area :description, :rows => 12, :cols => 50
  .field
    = f.label :starts_at
    #starts_at_container.date= f.datetime_select :starts_at
  .field
    = f.label :ends_at
    #ends_at_container.date
      %span{:id => "ends_at_rollup"}
        = f.datetime_select :ends_at
        &nbsp;
      = check_box_tag "ends_at_present", f.object.ends_at.present?
      %span.bold Has ends at date?

  = f.image

  .actions
    %label Actions
    = f.submit 'Save'
    = f.submit 'Preview'
