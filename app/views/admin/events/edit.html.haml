.post
  %h2.title Edit Show
  .entry
    .meta
    = render 'form'

    .image_links
      = index_entity_image admin_events_path, "Back to Shows Index"
      %br
      = destroy_entity_image admin_event_path(@event), "Delete Show"
 
-if @preview
  .post
    %h2.title Preview
  .entry
    .meta 
    = render :partial => '/events/event', :object => @event

