.post
  %h2.title Edit News Post
  .entry
    .meta

    = render 'form'

    .image_links
      = index_entity_image admin_posts_path, "Back to News Index"
      %br
      = destroy_entity_image admin_post_path(@post), "Delete News Post"

- if @preview
  .post
    %h2.title Preview
    .entry
      .meta

      = render :partial => '/posts/post', :object => @post
    
