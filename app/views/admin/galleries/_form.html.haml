= form_for [:admin, Image.new], :html => { :multipart => true } do |f|
  = error_messages(@event)

  .field
    = f.label :file
    = f.file_field :file

  .field
    = f.label :label
    = f.text_field :label
    %span (Optional)

  .actions
    %label Actions
    = f.hidden_field :gallery_id, :value => @gallery.id
    = f.submit 'Upload'
